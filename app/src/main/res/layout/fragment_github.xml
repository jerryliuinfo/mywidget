<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click me"

        />
    <com.tcl.widget.demo.ui.widget.github.CircleProgressView
        android:id="@+id/circle_progress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:start_angel="135"
        app:sweep_angel="270"
        app:bgArcColor="@color/colorAccent"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.github.WaveProgressView
        android:id="@+id/wave_progress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.github.SubmitButtonView
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.path.DashPathEffectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.github.CustomProgressView
        android:id="@+id/custom_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/base_gray"
        android:padding="20dp"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.github.LoadingButtonView
        android:id="@+id/loading_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#f66b12"
        android:gravity="center"
        android:text="启动"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.github.FadeInTextView
        android:id="@+id/fadeInTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        />
    <com.tcl.widget.demo.ui.widget.github.PwdInputView
        android:id="@+id/pwd_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:clickable="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beijing2x"
        android:gravity="center"
        android:visibility="gone"
        >
        <com.tcl.widget.demo.ui.widget.github.RadarWaveView
            android:id="@+id/radar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                   >

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test"/>


    <com.tcl.widget.demo.ui.widget.github.SlantedTextView
        android:id="@+id/left_text"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:slantedMode="left_triangle"
        />
    </RelativeLayout>




</LinearLayout>